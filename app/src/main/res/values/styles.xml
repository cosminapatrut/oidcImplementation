<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/brandOrange</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>

    </style>

    <style name="AppWithToolbar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/brandOrange</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="title">@string/actionbar_txt</item>
        <item name="displayOptions">showTitle</item>
        <item name="navigationIcon">@drawable/ic_chevron_left</item>
        <item name="expandedTitleGravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

</resources>