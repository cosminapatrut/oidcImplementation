<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_recycler_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">


    <ImageView
        android:id="@+id/home_image_iv"
        android:layout_width="225dp"
        android:layout_height="203dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/home_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:fontFamily="@font/san_francisco_display_regular"
        android:textSize="32sp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/home_subtitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:maxLines="4"
        android:textColor="@color/home_grey_text"
        android:fontFamily="@font/san_francisco_display_regular"
        android:textSize="17sp"/>
</LinearLayout>